<?xml version="1.0" encoding="UTF-8"?>
<root label="游戏设计后台">

	<!-- 自定义简单类型，用于设置默认值 -->
	<ti typeDef="" type="i" value="1" />
	<tr typeDef="" type="r" value="1.1" />
	<type typeDef="tb" type="b" value="true" />
	<type typeDef="ts" type="s" value="default" />
	<type typeDef="tt" type="s" textarea="true" />

	<!-- 自定义结构类型 -->
	<type typeDef="user" type="st">
		<userId id="id" label="玩家id" type="s" />
		<atkx id="atk" label="攻击力" type="tr" />
		<defx id="def" label="防御力" type="tr" />
		<desc label="描述" type="tt" optional="true" />
	</type>

	<!-- 自定义列表，映射表类型 -->
	<type typeDef="userList" type="l" label="列表-玩家">
		<e type="user" />
	</type>

	<type typeDef="userMap" type="m" label="映射表-玩家">
		<e type="user" />
	</type>

	<type typeDef="tm2" type="l">
		<type type="st">
			<type id="name" type="ts" />
		</type>
	</type>

	<type typeDef="strList" type="l">
		<type type="s" />
	</type>

	<appbase typeDef="appbase" label="应用程序版本信息" embed="true">
		<appname label="应用名" type="s" />
		<appVersion label="应用版本" type="s" />
	</appbase>

	<baseInfo label="公共信息">
		<!-- 视觉上的分组 -->
		<vst1 label="基本类型" type="vst" embed="true">
			<a1 label="整数" type="ti" />
			<a2 label="实数" type="tr" />
			<a3 label="布尔" type="tb" />
			<a4 label="字符串" type="ts" />
			<a5 label="字符串（文本框）" type="tt" />
			<vst1_1 label="分组" type="vst">
				<a6 label="整数" type="ti" />
				<a7 label="实数" type="tr" />
				<!-- 覆盖自定义类型的默认值 -->
				<a8 label="布尔" type="tb" value="false" />
				<a9 label="字符串（文本框）" type="ts" textarea="true" />
				<a10 label="字符串" type="tt" textarea="false" />
			</vst1_1>
		</vst1>

		<!-- 引用自定义类型，内嵌结构体 -->
		<appbase type="appbase" />

		<!-- 直接定义结构体，非内嵌结构体 -->
		<s1 label="结构体-简单类型" type="st">
			<!-- 可选，有值 -->
			<s1a1 label="属性1" type="s" optional="true" />
			<!-- 可选，无值 -->
			<s1a2 label="属性2" type="i" optional="true" />
			<!-- 必选，缺值 -->
			<s1a3 label="属性3" type="r" />
			<!-- 必选，缺值，有默认值 -->
			<s1a4 label="属性4" type="r" value="3.33" />
		</s1>

		<!-- 映射表 -->
		<attrDefaultValues label="属性默认值" type="m" embed="true">
			<e type="s"/>
			<!-- 以下结构被忽略 -->
			<rootM3A1 label="属性1" type="s" />
			<rootM3A2 label="属性2" type="i" />
			<rootM3A3 label="属性3" type="b" />
		</attrDefaultValues>

		<attrDefaultValues2 label="属性默认值2" type="m">
			<e type="st" labelKey="name">
				<desc label="备注" type="tt" optional="true" />
				<name label="属性名" type="s" />
				<value label="属性值" type="i" />
			</e>
		</attrDefaultValues2>

		<m_l_s label="映射表-列表-字符串" type="m">
			<e type="strList" />
		</m_l_s>

		<userMap type="userMap" />

		<m_m_s label="映射表-映射表-字符串" type="m">
			<e type="m">
				<e type="s" />
			</e>
		</m_m_s>

		<!-- 列表 -->
		<roleInUse label="可用玩家角色列表" type="l">
			<e type="s" />
		</roleInUse>

		<l_l_st label="列表-列表-列表-玩家" type="l">
			<e type="l">
				<e type="userList" />
			</e>
		</l_l_st>

		<l_m_st label="列表-映射表-结构体" type="l">
			<e type="m">
				<e type="st">
					<a1 label="属性1" type="s" />
					<a2 label="属性2" type="i" />
					<a3 label="属性3" type="b" />
				</e>
			</e>
		</l_m_st>

		<error_type label="未知类型" type="xx" />

		<rootL2 label="列表（元素为结构体）" type="l">
			<e type="st" labelKey="错误的labelKey">
				<rootL2A1 label="默认的labelKey" type="s" />
				<rootL2A2 type="i" />
				<rootL2A3 type="b" />
				<rootL2L1 type="l" embed="true">
					<e type="st">
						<rootL2L1A1 type="s" />
					</e>
				</rootL2L1>
				<rootL2L2 type="strList" />
				<rootL2M1 type="m">
					<e type="s" />
					<!-- 元素类型配置错误，以下结构被忽略 -->
					<rootL2M1A1 type="s" />
					<rootL2M1A2 type="i" />
					<rootL2M1A3 type="b" />
				</rootL2M1>
			</e>
		</rootL2>
	</baseInfo>

	<!-- 拥有idPrefix，特殊处理：本身变成实体结构，所在位置转为映射表，元素的id自动生成 -->
	<monster idPrefix="m">
		<baseView label="基本信息" type="vst" embed="true">
			<name label="名字" type="s" />
			<desc label="描述" type="tt" />
			<baseMoreView label="更多信息" type="vst" embed="true">
				<descMore label="更多描述" type="tt" />
			</baseMoreView>
		</baseView>
		<modelView label="模型信息" type="vst">
			<modelL label="模型长度" type="r" />
			<modelH label="模型高度" type="r" />
			<modelW label="模型宽度" type="r" />
			<modelMoreView label="速度" type="vst">
				<runSpeed label="跑步速度" type="r" />
				<walkSpeed label="走路速度" type="r" />
				<jumpSpeed label="跳走速度（可选）" type="r" optional="true" />
			</modelMoreView>
		</modelView>
		<attrs1 label="属性集1" type="m">
			<e type="s" />
		</attrs1>
		<attrs2 label="属性集2（可选）" type="m" embed="true" optional="true">
			<e type="s" />
		</attrs2>
	</monster>

	<item idPrefix="i">
		<baseView label="基本信息" type="vst" embed="true">
			<name label="名字" type="s" />
			<desc label="描述" type="tt" />
			<baseMoreView label="更多信息" type="vst">
				<descMore label="更多描述" type="tt" />
			</baseMoreView>
		</baseView>
		<attrs label="属性集" type="m">
			<attrGroup type="m" embed="true">
				<attrValue type="s" />
			</attrGroup>
		</attrs>
	</item>
</root>